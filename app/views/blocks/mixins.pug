mixin menuLink(title, href = "#")
	li.header-menu-item
		a.header-menu-link(href= href)= title

mixin headerBottomItem(number, title)
	.header-bottom-item
		span.header-bottom-number= number
		span.header-bottom-text= title

mixin blockBox(caption, title, desc)
	.block-box
		h3.block-box-caption= caption 
		h2.block-box-heading= title 
		if desc
			p.block-box-desc= desc

mixin aboutItem(src, title, iconClass, alt = "")
	.about-item 
		img.about-img(src= src, alt= alt)
		.about-content
			i.about-icon(class= iconClass)
			span.about-title= title

mixin serviceItem(src, title, desc)
	.service-item 
		img.service-item-img(src= src)
		.service-item-info
			h3.service-item-title= title
			p.service-item-desc= desc
			
mixin wedoItem(src, title, desc, active='')
	.wedo-item(class= active)
		.wedo-item-header 
			img.wedo-item-icon(src= src)
			h3.wedo-item-title= title
			i.fal.fa-angle-down.wedo-item-arrow
		.wedo-item-content
			.wedo-item-text= desc

mixin teamSocial(facebook = '#', twitter = '#', pinterest = '#', instagram = '#')
	ul.team-social 
		li.team-social-item
			a.team-social-link(href= facebook) 
				i.fab.fa-facebook-f
		li.team-social-item
			a.team-social-link(href= twitter) 
				i.fab.fa-twitter
		li.team-social-item
			a.team-social-link(href= pinterest) 
				i.fab.fa-pinterest
		li.team-social-item
			a.team-social-link(href= instagram) 
				i.fab.fa-instagram

mixin teamItem(src= './images/img-team1.png', name= 'Christopher Cambell', position = 'Branding/UX team.team-list ')
	.team-item 
		.team-main 
			img(src= src).team-image
			.team-content 
				if block
					block
		.team-info 
			h3.team-name= name
			span.team-position= position

mixin workItem(src = './images/img-work1.png', icon = 'fa fa-home', title = 'Creatively design', full = '', desc = 'Lorem ipsum dolor sit.work-list')
	.work-item(class= full)
		img.work-image(src= src)
		.work-content 
			i.work-icon(class = icon) 
			h3.work-title= title
			span.work-desc.text.text--light= desc

mixin peopleItem(src ='./images/img-people1.png', name = 'Matthew Dix', job = 'Graphic design', desc = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.')
	li.people-item 
		img.people-avatar(src= src)
		.people-info 
			h3.people-name= name
			span.people-job.text.text--light= job
			p.people-desc.text= desc

mixin storyItem(src ='./images/img-blog1.png', dateNumber = 15, dateText = 'Jan', title = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit', desc = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.', veiws = 1000, comments = 100)
	li.story-item 
		.story-media 
			img.story-image(src= src)
			.story-date 
				.story-date-number= dateNumber
				.story-date-text.text.text--light= dateText
		h3.story-title= title
		.story-desc.text
			p.story-desc-inner= desc
		.story-meta 
			.story-meta-item
				i.fa.fa-eye.story-meta-icon 
				span.story-meta-number.text= veiws
			.story-meta-item
				i.fa.fa-comment.story-meta-icon 
				span.story-meta-number.text= comments

mixin quoteItem(src = './images/img-quote.png', type = false, desc = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.', author = 'Jon Doe')
	.quote-item
		if type == false 
			.quote-icon 
				img(src= src)
		else
			img(src= src).quote-image
		.quote-info 
			p.quote-desc= desc
			span.quote-author= author